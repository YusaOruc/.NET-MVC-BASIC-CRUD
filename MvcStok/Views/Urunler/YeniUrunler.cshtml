@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrunler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Ürün Adı</label>
        <input required="" type="text" name="URUNAD" class="form-control" placeholder="Ürün Adını Giriniz">
        
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Marka</label>
        <input required="" type="text" name="MARKA" class="form-control" placeholder="Markayı Giriniz">
     </div> 
    <div class="form-group">
        <label for="exampleInputEmail1">Ürün Kategorisi</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Fiyat</label>
        <input required="" type="text" name="FIYAT" class="form-control" placeholder="Fiyatı Giriniz">
        
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Stok</label>
        <input required="" type="text" name="STOK" class="form-control" placeholder="Stok Giriniz">
       
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

